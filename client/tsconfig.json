{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "webpack.main.ts",
    "webpack.common.js",
    "webpack.renderer.js"
  ],
  "exclude": ["node_modules"]
}
